@prefix serma:   <http://data.serma.org/onto/> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .

#######################################################################
# Ontologie des documents métier du groupe Serma
#######################################################################
<http://data.serma.org/onto/>
    rdf:type    owl:Ontology ;
    rdfs:label  "Ontologie des documents métier du groupe Serma" ;
    rdfs:comment
      "Ce fichier définit toutes les classes et propriétés nécessaires pour
       modéliser l’ensemble des documents internes du groupe Serma
       (rapports d’analyse, devis, documents client, documents marketing, etc.)." .

#######################################################################
# 1 Classes génériques
#######################################################################

# DocumentMetier : classe parente pour tous les documents internes de Serma
serma:DocumentMetier
    rdf:type    owl:Class ;
    rdfs:label  "Document métier" ;
    rdfs:comment
      "Classe générale représentant n’importe quel document interne du groupe Serma." .

#######################################################################
# 2 Rapports d’analyse
#######################################################################

# RapportAnalyse : sous‐classe de DocumentMetier
serma:RapportAnalyse
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentMetier ;
    rdfs:label      "Rapport d’analyse" ;
    rdfs:comment    "Document qui synthétise les résultats d’analyses techniques." .

# Sous‐éléments du rapport d’analyse
serma:Echantillon
    rdf:type     owl:Class ;
    rdfs:label   "Échantillon" ;
    rdfs:comment "Échantillon analysé (avec date d’analyse, référence, etc.)." .

serma:ObjetAnalyse
    rdf:type     owl:Class ;
    rdfs:label   "Objet analysé" ;
    rdfs:comment "Objet soumis à l’analyse (peut être matériel ou information). 
                  Utile aussi pour les devis ou fiches." .

serma:ProgrammeAnalyse
    rdf:type       owl:Class ;
    rdfs:label     "Programme d’analyse" ;
    rdfs:comment   "Méthodologie ou protocole utilisé lors de l’analyse." .

serma:ParametreAnalytique
    rdf:type     owl:Class ;
    rdfs:label   "Paramètre analytique" ;
    rdfs:comment "Paramètre (température, durée, etc.) contrôlé pendant l’analyse." .

serma:Resultat
    rdf:type     owl:Class ;
    rdfs:label   "Résultat" ;
    rdfs:comment "Résultat de l’analyse (texte, tableau, graphe, etc.)." .

serma:Conclusion
    rdf:type     owl:Class ;
    rdfs:label   "Conclusion" ;
    rdfs:comment "Conclusion écrite tirée de l’analyse." .

serma:Livrable
    rdf:type     owl:Class ;
    rdfs:label   "Livrable" ;
    rdfs:comment "Livrable résultant de l’analyse (rapport final, présentation PPT, etc.)." .

serma:Annexe
    rdf:type     owl:Class ;
    rdfs:label   "Annexe" ;
    rdfs:comment "Annexe jointe au rapport (images, spectres, profils, tableaux, etc.)." .

serma:Responsable
    rdf:type     owl:Class ;
    rdfs:label   "Responsable" ;
    rdfs:comment "Personne responsable ou auteur du rapport." .

# Relations (ObjectProperties) pour les Rapports d’analyse
serma:rapportInclutEchantillon
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "inclut échantillon" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:Echantillon ;
    rdfs:comment   "Le rapport d’analyse inclut l’échantillon analysé." .

serma:rapportInclutObjet
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "inclut objet" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:ObjetAnalyse ;
    rdfs:comment   "Le rapport d’analyse décrit l’objet analysé." .

serma:rapportAPourProgramme
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "a pour programme" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:ProgrammeAnalyse ;
    rdfs:comment   "Le rapport d’analyse spécifie le protocole ou programme de test." .

serma:rapportInclutParametre
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "inclut paramètre" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:ParametreAnalytique ;
    rdfs:comment   "Le rapport d’analyse mentionne un paramètre mesuré." .

serma:rapportProduitResultat
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "produit résultat" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:Resultat ;
    rdfs:comment   "Le rapport d’analyse produit un résultat final." .

serma:rapportInclutConclusion
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "inclut conclusion" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:Conclusion ;
    rdfs:comment   "Le rapport d’analyse se termine par une conclusion." .

serma:rapportInclutLivrable
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "inclut livrable" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:Livrable ;
    rdfs:comment   "Le rapport d’analyse génère un livrable (ex. PPT)." .

serma:rapportInclutAnnexe
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "inclut annexe" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:Annexe ;
    rdfs:comment   "Le rapport d’analyse peut joindre des annexes (images, spectres…). " .

serma:rapportRedigePar
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "rédigé par" ;
    rdfs:domain    serma:RapportAnalyse ;
    rdfs:range     serma:Responsable ;
    rdfs:comment   "Le rapport d’analyse est rédigé par un responsable." .

# Propriétés de données (DatatypeProperties) pour Rapports d’analyse
serma:dateAnalyse
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "date d’analyse" ;
    rdfs:domain  serma:Echantillon ;
    rdfs:range   xsd:dateTime ;
    rdfs:comment "Date à laquelle l’échantillon a été analysé." .

serma:referenceEchantillon
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "référence échantillon" ;
    rdfs:domain  serma:Echantillon ;
    rdfs:range   xsd:string ;
    rdfs:comment "Référence ou numéro de série de l’échantillon." .

serma:photoObjet
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "photo objet" ;
    rdfs:domain  serma:ObjetAnalyse ;
    rdfs:range   xsd:anyURI ;
    rdfs:comment "Image ou photo de l’objet analysé." .

serma:temperatureParam
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "température paramètre" ;
    rdfs:domain  serma:ParametreAnalytique ;
    rdfs:range   xsd:decimal ;
    rdfs:comment "Valeur de température utilisée comme paramètre d’analyse." .

serma:dateLivrable
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "date livrable" ;
    rdfs:domain  serma:Livrable ;
    rdfs:range   xsd:dateTime ;
    rdfs:comment "Date de génération du livrable (ex. date du PPT). " .

#######################################################################
# 3 Devis
#######################################################################

serma:Devis
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentMetier ;
    rdfs:label      "Devis" ;
    rdfs:comment    "Document de type devis technique ou commercial." .

# Sous‐éléments du Devis
serma:ObjetAnalyse
    rdf:type     owl:Class ;
    rdfs:label   "Objet analysé" ;
    rdfs:comment "Réutilisé pour décrire l’objet figurant dans un devis (texte, photo…). " .

serma:ProgrammeAnalyse
    rdf:type       owl:Class ;
    rdfs:label     "Programme d’analyse" ;
    rdfs:comment   "Réutilisé pour indiquer la méthodologie technique dans un devis." .

serma:TableauPrix
    rdf:type     owl:Class ;
    rdfs:label   "Tableau des prix" ;
    rdfs:comment "Tableau listant les tarifs par poste dans un devis." .

# Relations pour Devis
serma:devisContientObjet
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "devis contient objet" ;
    rdfs:domain    serma:Devis ;
    rdfs:range     serma:ObjetAnalyse ;
    rdfs:comment   "Le devis inclut l’objet analysé (avec description, photo…). " .

serma:devisAPourProgramme
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "devis a pour programme" ;
    rdfs:domain    serma:Devis ;
    rdfs:range     serma:ProgrammeAnalyse ;
    rdfs:comment   "Le devis spécifie le programme ou protocole d’analyse." .

serma:devisContientTableauPrix
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "devis contient tableau prix" ;
    rdfs:domain    serma:Devis ;
    rdfs:range     serma:TableauPrix ;
    rdfs:comment   "Le devis comprend un tableau des prix associé." .

# Propriétés de données (DatatypeProperties) pour Devis
serma:dateDeDevis
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "date de devis" ;
    rdfs:domain  serma:Devis ;
    rdfs:range   xsd:dateTime ;
    rdfs:comment "Date de création ou d’émission du devis." .

serma:versionDevis
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "version devis" ;
    rdfs:domain  serma:Devis ;
    rdfs:range   xsd:string ;
    rdfs:comment "Numéro de version ou de révision du devis." .

serma:prixTotal
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "prix total" ;
    rdfs:domain  serma:Devis ;
    rdfs:range   xsd:decimal ;
    rdfs:comment "Somme totale des montants dans le tableau de prix." .

#######################################################################
# 4 Document client
#######################################################################

serma:DocumentClient
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentMetier ;
    rdfs:label      "Document client" ;
    rdfs:comment    "Document transmis par un client décrivant un besoin ou une problématique." .

# Sous‐éléments du DocumentClient
serma:DescriptionProblematique
    rdf:type     owl:Class ;
    rdfs:label   "Description problématique" ;
    rdfs:comment "Texte et photo illustrant la problématique du client." .

# Relations pour DocumentClient
serma:docClientInclutProblematique
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "docClient inclut problématique" ;
    rdfs:domain    serma:DocumentClient ;
    rdfs:range     serma:DescriptionProblematique ;
    rdfs:comment   "Le document client inclut une description de la problématique (texte+photo). " .

# Propriétés de données pour DescriptionProblematique
serma:texteProblematique
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "texte problématique" ;
    rdfs:domain  serma:DescriptionProblematique ;
    rdfs:range   xsd:string ;
    rdfs:comment "Texte explicatif de la problématique." .

serma:photoProblematique
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "photo problématique" ;
    rdfs:domain  serma:DescriptionProblematique ;
    rdfs:range   xsd:anyURI ;
    rdfs:comment "Lien vers la photo illustrant la problématique." .

#######################################################################
# 5 Documents marketing
#######################################################################

serma:DocumentsMarketing
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentMetier ;
    rdfs:label      "Documents marketing" ;
    rdfs:comment    "Documents à usage marketing (fiches, flyers, plaquettes, présentations, etc.)." .

# 5.1 Fiche d’application
serma:FicheApplication
    rdf:type     owl:Class ;
    rdfs:label   "Fiche d’application" ;
    rdfs:comment "Fiche marketing / étude de cas : décrit un objet, sa mise en œuvre, etc." .

serma:ObjetFiche
    rdf:type     owl:Class ;
    rdfs:label   "Objet (FicheApplication)" ;
    rdfs:comment "Objet décrit dans la fiche d’application (texte seulement)." .

serma:TechniqueMiseEnOeuvre
    rdf:type     owl:Class ;
    rdfs:label   "Technique mise en œuvre" ;
    rdfs:comment "Description de la mise en œuvre de la technique, au format texte." .

serma:ResultatMarketing
    rdf:type     owl:Class ;
    rdfs:label   "Résultat (Marketing)" ;
    rdfs:comment "Résultat illustré pour la fiche marketing (images, spectres, tableaux)." .

serma:ConclusionMarketing
    rdf:type     owl:Class ;
    rdfs:label   "Conclusion (Marketing)" ;
    rdfs:comment "Conclusion textuelle ou schématique pour la fiche marketing." .

# Relations pour FicheApplication
serma:ficheAppInclutObjet
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "ficheApp inclut objet" ;
    rdfs:domain    serma:FicheApplication ;
    rdfs:range     serma:ObjetFiche ;
    rdfs:comment   "La fiche d’application inclut un objet (texte descriptif)." .

serma:ficheAppInclutTechnique
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "ficheApp inclut technique" ;
    rdfs:domain    serma:FicheApplication ;
    rdfs:range     serma:TechniqueMiseEnOeuvre ;
    rdfs:comment   "La fiche d’application détaille la technique mise en œuvre." .

serma:ficheAppInclutResultat
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "ficheApp inclut résultat" ;
    rdfs:domain    serma:FicheApplication ;
    rdfs:range     serma:ResultatMarketing ;
    rdfs:comment   "La fiche d’application présente un résultat marketing (images, spectres…). " .

serma:ficheAppInclutConclusion
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "ficheApp inclut conclusion" ;
    rdfs:domain    serma:FicheApplication ;
    rdfs:range     serma:ConclusionMarketing ;
    rdfs:comment   "La fiche d’application se termine par une conclusion marketing." .

# Propriétés de données pour FicheApplication
serma:texteObjetFiche
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "texte objet fiche" ;
    rdfs:domain  serma:ObjetFiche ;
    rdfs:range   xsd:string ;
    rdfs:comment "Description textuelle de l’objet dans la fiche d’application." .

# 5.2 Fiche technique (analyse)
serma:FicheTechniqueAnalyse
    rdf:type     owl:Class ;
    rdfs:label   "Fiche technique analyse" ;
    rdfs:comment "Document technique décrivant une méthode d’analyse." .

serma:SpecificationsTechnique
    rdf:type     owl:Class ;
    rdfs:label   "Spécifications (Technique)" ;
    rdfs:comment "Spécifications textuelles propres à la méthode d’analyse." .

serma:PrincipeTechnique
    rdf:type     owl:Class ;
    rdfs:label   "Principe (Technique)" ;
    rdfs:comment "Principe de la méthode d’analyse (texte + schéma). " .

# Relations pour FicheTechniqueAnalyse
serma:ficheTechInclutSpecifications
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "ficheTech inclut spécifications" ;
    rdfs:domain    serma:FicheTechniqueAnalyse ;
    rdfs:range     serma:SpecificationsTechnique ;
    rdfs:comment   "La fiche technique inclut les spécifications de la méthode." .

serma:ficheTechInclutPrincipe
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "ficheTech inclut principe" ;
    rdfs:domain    serma:FicheTechniqueAnalyse ;
    rdfs:range     serma:PrincipeTechnique ;
    rdfs:comment   "La fiche technique détaille le principe de la méthode (texte + schéma)." .

# 5.3 Flyer (étude de cas)
serma:Flyer
    rdf:type     owl:Class ;
    rdfs:label   "Flyer" ;
    rdfs:comment "Document marketing de type Flyer (étude de cas, avec résumé, schémas, images)." .

serma:ResumeFlyer
    rdf:type     owl:Class ;
    rdfs:label   "Résumé Flyer" ;
    rdfs:comment "Résumé du Flyer, pouvant inclure texte, description schématique, spectres." .

# Relation pour Flyer
serma:flyerInclutResume
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "flyer inclut résumé" ;
    rdfs:domain    serma:Flyer ;
    rdfs:range     serma:ResumeFlyer ;
    rdfs:comment   "Le Flyer comprend un résumé explicatif." .

# Propriété de donnée pour Flyer
serma:photoFlyer
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "photo flyer" ;
    rdfs:domain  serma:Flyer ;
    rdfs:range   xsd:anyURI ;
    rdfs:comment "Lien vers l’image ou spectre associé au Flyer." .

# 5.4 Plaquette
serma:Plaquette
    rdf:type     owl:Class ;
    rdfs:label   "Plaquette" ;
    rdfs:comment "Plaquette marketing : recense mots‐clés métiers et liste des techniques." .

serma:MotCleMetier
    rdf:type     owl:Class ;
    rdfs:label   "Mot‐clé métier" ;
    rdfs:comment "Mot‐clé métier présent dans la plaquette." .

serma:TechniqueListe
    rdf:type     owl:Class ;
    rdfs:label   "Technique (liste)" ;
    rdfs:comment "Technique répertoriée dans la plaquette marketing." .

# Relations pour Plaquette
serma:plaquetteInclutMotCle
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "plaquette inclut mot‐clé" ;
    rdfs:domain    serma:Plaquette ;
    rdfs:range     serma:MotCleMetier ;
    rdfs:comment   "La plaquette contient un ou plusieurs mots‐clés métiers." .

serma:plaquetteInclutTechniqueListe
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "plaquette inclut technique liste" ;
    rdfs:domain    serma:Plaquette ;
    rdfs:range     serma:TechniqueListe ;
    rdfs:comment   "La plaquette énumère les techniques ou technologies évoquées." .

serma:motCleTexte
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "mot‐clé texte" ;
    rdfs:domain  serma:MotCleMetier ;
    rdfs:range   xsd:string ;
    rdfs:comment "Texte du mot‐clé métier." .

# 5.5 Présentation ST (regroupe plusieurs fiches d’application)
serma:PresentationST
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentsMarketing ;
    rdfs:label      "Présentation de ST" ;
    rdfs:comment    "Présentation (diaporama) reprise dans les documents marketing, 
                     agrège plusieurs fiches d’application." .

serma:presentationSTInclutFicheApp
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "presentationST inclut fiche applic" ;
    rdfs:domain    serma:PresentationST ;
    rdfs:range     serma:FicheApplication ;
    rdfs:comment   "La présentation ST regroupe plusieurs fiches d’application." .

#######################################################################
# 6 Propriétés techniques communes (optionnel)
#######################################################################

# URI unique pour chaque ressource
serma:uri
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "URI" ;
    rdfs:domain  serma:DocumentMetier ;
    rdfs:range   xsd:anyURI ;
    rdfs:comment "URI unique identifiant chaque instance de document ou entité." .

# Horodatage de l’import dans le KMS
serma:dateImport
    rdf:type     owl:DatatypeProperty ;
    rdfs:label   "date d’import" ;
    rdfs:domain  serma:DocumentMetier ;
    rdfs:range   xsd:dateTime ;
    rdfs:comment "Date à laquelle la ressource a été importée dans le KMS." .

#######################################################################
# 7 Présentations techniques (Congrès + Poster)
#######################################################################

# 7.1 PrésentationCongresSES
serma:PrésentationCongresSES
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentsMarketing ;
    rdfs:label      "Présentation Congrès SES" ;
    rdfs:comment    "Présentation technique destinée à un congrès interne SES." .

# 7.1.1 Sous‐élément : Résumé de la Présentation SES
serma:RésuméPrésentationSES
    rdf:type     owl:Class ;
    rdfs:label   "Résumé Présentation SES" ;
    rdfs:comment "Résumé textuel ou schématisé (texte, description de schéma, spectre, image) 
                  de la présentation technique pour le congrès interne SES." .

# 7.1.2 Relation : PrésentationCongresSES inclut Résumé
serma:présCongresSESInclutRésumé
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "présCongresSES inclut résumé" ;
    rdfs:domain    serma:PrésentationCongresSES ;
    rdfs:range     serma:RésuméPrésentationSES ;
    rdfs:comment   "La présentation pour le congrès SES contient son résumé (texte+schéma+image)." .

# 7.2 PosterSES
serma:PosterSES
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentsMarketing ;
    rdfs:label      "Poster SES" ;
    rdfs:comment    "Poster de type affiche pour un congrès SES (présentation visuelle, spectre, etc.)." .

# 7.2.1 Sous‐élément : Résumé de Poster SES
serma:RésuméPosterSES
    rdf:type     owl:Class ;
    rdfs:label   "Résumé Poster SES" ;
    rdfs:comment "Résumé textuel ou schématisé (texte, description de schéma, spectre, image) 
                  du poster SES." .

# 7.2.2 Relation : PosterSES inclut Résumé
serma:posterSESInclutRésumé
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "posterSES inclut résumé" ;
    rdfs:domain    serma:PosterSES ;
    rdfs:range     serma:RésuméPosterSES ;
    rdfs:comment   "Le poster SES contient son résumé (texte+schéma+image)." .


#######################################################################
# 8 Biblio Congrès + Papiers
#######################################################################

# 8.1 PrésCongrèsExt (présentation extérieure)
serma:PrésCongrèsExt
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentsMarketing ;
    rdfs:label      "Présentation Congrès Extérieur" ;
    rdfs:comment    "Présentation technique soumise à un congrès externe (non SES)." .

# 8.1.1 Sous‐élément : Résumé PrésCongrèsExt
serma:RésuméPrésCongrèsExt
    rdf:type     owl:Class ;
    rdfs:label   "Résumé Présentation Congrès Extérieur" ;
    rdfs:comment "Résumé (texte, description de schéma, spectre, image) 
                  de la présentation envoyée à un congrès externe." .

# 8.1.2 Relation : PrésCongrèsExt inclut Résumé
serma:presCongresExtInclutRésumé
    rdf:type       owl:ObjectProperty ;
    rdfs:label     "presCongresExt inclut résumé" ;
    rdfs:domain    serma:PrésCongrèsExt ;
    rdfs:range     serma:RésuméPrésCongrèsExt ;
    rdfs:comment   "La présentation externe pour congrès inclut son résumé (texte+schéma+image)." .

# 8.2 PapierScientifique
serma:PapierScientifique
    rdf:type       owl:Class ;
    rdfs:subClassOf serma:DocumentMetier ;
    rdfs:label      "Papier scientifique" ;
    rdfs:comment    "Article scientifique publié dans un journal ou archive ouverte." .

# 8.2.1 Sous‐élément : Résumé Papier scientifique
serma:RésuméPapier
    rdf:type     owl:Class ;
    rdfs:label   "Résumé Papier" ;
    rdfs:comment "Résumé du papier scientifique (texte, description de schéma, spectre, image)." .

# 8.2.2 Relation : PapierScientifique inclut Résumé
serma:papierInclutRésumé
    rdf:type       owl:ObjectProperty ;
